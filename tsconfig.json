{
  "compilerOptions": {
    "outDir": "./www/static",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
